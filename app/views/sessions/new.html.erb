<div class="login">
  <div class="container">
    <div class="form">

      <h1>Sisteme Giriş Yap</h1>
      <%= form_for(:session, url: login_path) do |f| %>
          <p>Email Adresi:</p>
          <%= f.email_field :email, :placeholder => "Email" %><br><p>Şifre</p>
          <%= f.password_field :password, :placeholder => "Password" %><br>
          <%= f.submit "Log in", class: "btn-submit" %>
      <% end %>


    </div>
  </div>
</div>